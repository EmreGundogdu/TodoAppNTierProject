@model WorkUpdateDto
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Todo App</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container my-2">
        <form method="post" asp-action="Update" asp-controller="Home">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="mt-5">
                <label>İş Tanımı: </label>
                <input asp-for="Definition" class="form-control" />
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" asp-for="IsCompleted">
                <label class="form-check-label" for="isCompleted">
                    Tamamamlandı mı
                </label>
            </div>
            <div class="mb-5">
                <button type="submit" class="btn btn-primary btn-sm">Kaydet</button>
            </div>
            <div asp-validation-summary="All" class="text-danger">

            </div>
        </form>
    </div>
</body>
</html>